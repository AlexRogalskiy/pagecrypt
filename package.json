{
    "name": "pagecrypt",
    "version": "1.2.0",
    "description": "A CLI to add client-side password-protection for HTML files",
    "main": "index.js",
    "scripts": {
        "cli": "node cli.js",
        "test": "npm pack && cd test && npm i ../pagecrypt-*.tgz && npm run test && cd .. && echo 'Verify test output in `test/out-js.html` and `test/out-cli.html`'",
        "start": "vite",
        "build": "vite build",
        "postbuild": "rm -rf web/build/assets",
        "serve": "vite preview"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Greenheart/pagecrypt.git"
    },
    "bin": {
        "pagecrypt": "./cli.js"
    },
    "author": "Samuel Plumppu",
    "license": "MIT",
    "keywords": [
        "encryption",
        "password",
        "clientside",
        "password-protection",
        "cli",
        "commandline",
        "html",
        "crypto",
        "hidden webpage"
    ],
    "bugs": {
        "url": "https://github.com/Greenheart/pagecrypt/issues"
    },
    "homepage": "https://github.com/Greenheart/pagecrypt#readme",
    "dependencies": {
        "node-forge": "^0.10.0",
        "yargs": "^16.2.0"
    },
    "devDependencies": {
        "autoprefixer": "^10.2.5",
        "generate-password": "^1.6.0",
        "postcss": "^8.2.12",
        "tailwindcss": "^2.1.1",
        "vite": "^2.2.1",
        "vite-plugin-singlefile": "^0.5.1"
    }
}
